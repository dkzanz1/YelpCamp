<% layout('layouts/boilerplate')%>
<div class="container d-flex justify-contents-center align-contents-center mt-5">
<div class="col-xs-8 offset-xs-3 col-md-4 offset-md-3">
    <div class="card shadow">
       <img src="https://images.unsplash.com/photo-1587818226258-846b7ea0b6aa?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MzE4fHxjYW1waW5nfGVufDB8fDB8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"
       alt="" class="card-img-top"/>
       <div class="card-body ">
        <h5 class="card-title">Register</h5>
<form action="/register" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input class="form-control" type="text" id="username" name="username" autofocus required>
        <div class="valid-feedback">
        looks good!
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="email" id="email" name="email" required>
        <div class="valid-feedback">
        looks good!
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" required>
        <div class="valid-feedback">
        looks good!
        </div>
    </div>
    <button class ="btn btn-success col-12">Register</button>
</form>
</div>